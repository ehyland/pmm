{
  "name": "@ehyland/pmm-monorepo",
  "description": "my take on corepack",
  "packageManager": "pnpm@9.14.2",
  "type": "module",
  "scripts": {
    "build": "webpack",
    "build:watch": "webpack --watch",
    "build:watch:release": "BUILD_WATCH_RELEASE=1 webpack --watch",
    "dev": "webpack --watch --mode development",
    "test": "jest --runInBand --verbose",
    "test:watch": "jest --runInBand --verbose --watch",
    "test:e2e": "scripts/test-e2e",
    "test:e2e:watch": "BUILD_WATCH=1 scripts/test-e2e",
    "add-change": "changeset add",
    "format:write": "pnpm format --write",
    "format:check": "pnpm format --check",
    "format": "prettier 'packages/**/src/*.{js,ts}'"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "author": "Eamon Hyland",
  "license": "ISC",
  "devDependencies": {
    "@actions/github": "^6.0.0",
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/preset-typescript": "^7.24.7",
    "@changesets/cli": "^2.27.7",
    "@octokit/rest": "^21.0.1",
    "@preconstruct/cli": "^2.8.7",
    "@types/debug": "^4.1.12",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.7",
    "@types/ms": "^0.7.34",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "execa": "^9.3.0",
    "jest": "^29.7.0",
    "jest-watch-typeahead": "^2.2.2",
    "lodash": "^4.17.21",
    "ms": "^2.1.3",
    "prettier": "^3.3.3",
    "tslib": "^2.6.3",
    "typescript": "^5.5.4",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4"
  }
}
