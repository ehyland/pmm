{
  "name": "@ehyland/pmm-monorepo",
  "description": "my take on corepack",
  "packageManager": "pnpm@7.1.5",
  "main": "index.js",
  "scripts": {
    "build": "webpack",
    "build:watch": "webpack --watch",
    "build:watch:release": "BUILD_WATCH_RELEASE=1 webpack --watch",
    "dev": "webpack --watch --mode development",
    "test": "jest --runInBand --verbose",
    "test:watch": "jest --runInBand --verbose --watch",
    "test:e2e": "scripts/test-e2e",
    "test:e2e:watch": "BUILD_WATCH=1 scripts/test-e2e",
    "add-change": "changeset add",
    "format:write": "pnpm format --write",
    "format:check": "pnpm format --check",
    "format": "prettier 'packages/**/src/*.{js,ts}'"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "author": "Eamon Hyland",
  "license": "ISC",
  "devDependencies": {
    "@actions/github": "^5.0.1",
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-typescript": "^7.16.7",
    "@changesets/cli": "^2.22.0",
    "@octokit/rest": "^18.12.0",
    "@preconstruct/cli": "^2.1.5",
    "@types/debug": "^4.1.7",
    "@types/jest": "^27.5.1",
    "@types/lodash": "^4.14.182",
    "@types/ms": "^0.7.31",
    "@types/node-fetch": "^2.6.1",
    "babel-jest": "^28.1.0",
    "babel-loader": "^8.2.5",
    "execa": "^5",
    "jest": "^28.1.0",
    "jest-watch-typeahead": "^1.1.0",
    "lodash": "^4.17.21",
    "ms": "^2.1.3",
    "prettier": "^2.6.2",
    "strip-ansi": "^6",
    "ts-loader": "^9.3.0",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@types/pacote": "^11.1.3"
  }
}
