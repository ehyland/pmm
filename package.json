{
  "name": "@ehyland/pmm-monorepo",
  "description": "my take on corepack",
  "packageManager": "pnpm@9.15.4",
  "type": "module",
  "scripts": {
    "build": "webpack",
    "build:watch": "webpack --watch",
    "build:watch:release": "BUILD_WATCH_RELEASE=1 webpack --watch",
    "dev": "webpack --watch --mode development",
    "test": "jest --runInBand --verbose",
    "test:watch": "jest --runInBand --verbose --watch",
    "test:e2e": "scripts/test-e2e",
    "test:e2e:watch": "BUILD_WATCH=1 scripts/test-e2e",
    "add-change": "changeset add",
    "format:write": "pnpm format --write",
    "format:check": "pnpm format --check",
    "format": "prettier 'packages/**/src/*.{js,ts}'"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "author": "Eamon Hyland",
  "license": "ISC",
  "devDependencies": {
    "@actions/github": "^6.0.0",
    "@babel/core": "^7.26.7",
    "@babel/preset-env": "^7.26.7",
    "@babel/preset-typescript": "^7.26.0",
    "@changesets/cli": "^2.27.12",
    "@octokit/rest": "^21.1.0",
    "@preconstruct/cli": "^2.8.10",
    "@types/debug": "^4.1.12",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.15",
    "@types/ms": "^2.1.0",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.2.1",
    "jest": "^29.7.0",
    "jest-watch-typeahead": "^2.2.2",
    "lodash": "^4.17.21",
    "ms": "^2.1.3",
    "nanoexec": "^1.1.0",
    "prettier": "^3.4.2",
    "prettier-2": "npm:prettier@^2",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  }
}
