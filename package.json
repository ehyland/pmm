{
  "name": "@ehyland/pmm-monorepo",
  "description": "my take on corepack",
  "packageManager": "pnpm@8.6.9",
  "main": "index.js",
  "scripts": {
    "build": "webpack",
    "build:watch": "webpack --watch",
    "build:watch:release": "BUILD_WATCH_RELEASE=1 webpack --watch",
    "dev": "webpack --watch --mode development",
    "test": "jest --runInBand --verbose",
    "test:watch": "jest --runInBand --verbose --watch",
    "test:e2e": "scripts/test-e2e",
    "test:e2e:watch": "BUILD_WATCH=1 scripts/test-e2e",
    "add-change": "changeset add",
    "format:write": "pnpm format --write",
    "format:check": "pnpm format --check",
    "format": "prettier 'packages/**/src/*.{js,ts}'"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "author": "Eamon Hyland",
  "license": "ISC",
  "devDependencies": {
    "@actions/github": "^5.1.1",
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@changesets/cli": "^2.26.1",
    "@octokit/rest": "^19.0.13",
    "@preconstruct/cli": "^2.7.0",
    "@types/debug": "^4.1.8",
    "@types/jest": "^29.5.2",
    "@types/lodash": "^4.14.195",
    "@types/ms": "^0.7.31",
    "babel-jest": "^29.5.0",
    "babel-loader": "^9.1.2",
    "execa": "^5",
    "jest": "^29.5.0",
    "jest-watch-typeahead": "^2.2.2",
    "lodash": "^4.17.21",
    "ms": "^2.1.3",
    "prettier": "^2.8.8",
    "tslib": "^2.5.3",
    "typescript": "^5.1.3",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4"
  }
}
