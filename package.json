{
  "name": "@ehyland/pmm-monorepo",
  "description": "my take on corepack",
  "packageManager": "pnpm@7.13.6",
  "main": "index.js",
  "scripts": {
    "build": "webpack",
    "build:watch": "webpack --watch",
    "build:watch:release": "BUILD_WATCH_RELEASE=1 webpack --watch",
    "dev": "webpack --watch --mode development",
    "test": "jest --runInBand --verbose",
    "test:watch": "jest --runInBand --verbose --watch",
    "test:e2e": "scripts/test-e2e",
    "test:e2e:watch": "BUILD_WATCH=1 scripts/test-e2e",
    "add-change": "changeset add",
    "format:write": "pnpm format --write",
    "format:check": "pnpm format --check",
    "format": "prettier 'packages/**/src/*.{js,ts}'"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "author": "Eamon Hyland",
  "license": "ISC",
  "devDependencies": {
    "@actions/github": "^5.0.1",
    "@babel/core": "^7.19.1",
    "@babel/preset-env": "^7.19.1",
    "@babel/preset-typescript": "^7.18.6",
    "@changesets/cli": "^2.24.4",
    "@octokit/rest": "^19.0.4",
    "@preconstruct/cli": "^2.2.1",
    "@types/debug": "^4.1.7",
    "@types/jest": "^29.0.3",
    "@types/lodash": "^4.14.185",
    "@types/ms": "^0.7.31",
    "babel-jest": "^29.0.3",
    "babel-loader": "^8.2.5",
    "execa": "^5",
    "jest": "^29.0.3",
    "jest-watch-typeahead": "^2.0.0",
    "lodash": "^4.17.21",
    "ms": "^2.1.3",
    "prettier": "^2.7.1",
    "tslib": "^2.4.0",
    "typescript": "^4.8.3",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
