{
  "name": "@ehyland/pmm-monorepo",
  "description": "my take on corepack",
  "packageManager": "pnpm@9.15.5",
  "type": "module",
  "scripts": {
    "build": "rspack",
    "build:watch": "rspack --watch",
    "build:watch:release": "BUILD_WATCH_RELEASE=1 rspack --watch",
    "dev": "rspack --watch --mode development",
    "test": "jest --runInBand --verbose",
    "test:watch": "jest --runInBand --verbose --watch",
    "test:e2e": "scripts/test-e2e",
    "test:e2e:watch": "BUILD_WATCH=1 scripts/test-e2e",
    "add-change": "changeset add",
    "format:write": "pnpm format --write",
    "format:check": "pnpm format --check",
    "format": "prettier 'packages/**/src/*.{js,ts}'"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "author": "Eamon Hyland",
  "license": "ISC",
  "devDependencies": {
    "@actions/github": "^6.0.0",
    "@changesets/cli": "^2.27.12",
    "@octokit/rest": "^21.1.0",
    "@preconstruct/cli": "^2.8.10",
    "@rspack/cli": "^1.2.2",
    "@rspack/core": "^1.2.2",
    "@swc/core": "^1.10.12",
    "@swc/jest": "^0.2.37",
    "@types/debug": "^4.1.12",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.15",
    "@types/ms": "^2.1.0",
    "jest": "^29.7.0",
    "jest-watch-typeahead": "^2.2.2",
    "lodash": "^4.17.21",
    "ms": "^2.1.3",
    "nanoexec": "^1.1.0",
    "prettier": "^3.4.2",
    "prettier-2": "npm:prettier@^2",
    "swc-loader": "^0.2.6",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3"
  }
}
